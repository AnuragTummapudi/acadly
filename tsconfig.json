{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "shared/*"
            ],
            "@client/*": [
                "client/*"
            ]
        }
    },
    "include": [
        "client/**/*",
        "server/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}