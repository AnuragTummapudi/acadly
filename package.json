    "bcryptjs": "^2.4.3",
    "connect-pg-simple": "^10.0.0",
    "dotenv": "^17.3.1",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.8.3",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "lucide-react": "^0.460.0",
    "memorystore": "^1.6.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.0",
    "react-router-dom": "^7.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
